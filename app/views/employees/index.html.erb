<div>
  <div>
    <h1>
      List of all employees
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new employee
    </h2>

    <form action="/insert_employee" method="post">
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="phone_box">
          Phone
        </label>

        <input type="text" id="phone_box" name="query_phone">
      </div>

      <div>
        <label for="base_box">
          Base
        </label>

        <input type="text" id="base_box" name="query_base">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position">
      </div>

      <div>
        <label for="emp_id_box">
          Emp
        </label>

        <input type="text" id="emp_id_box" name="query_emp_id">
      </div>

      <div>
        <label for="doh_box">
          Doh
        </label>

        <input type="text" id="doh_box" name="query_doh">
      </div>

      <div>
        <label for="access_box">
          Access
        </label>

        <input type="text" id="access_box" name="query_access">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email">
      </div>

      <button>
        Create employee
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Phone
        </th>

        <th>
          Base
        </th>

        <th>
          Position
        </th>

        <th>
          Emp
        </th>

        <th>
          Doh
        </th>

        <th>
          Access
        </th>

        <th>
          Image
        </th>

        <th>
          Email
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_employees.each do |an_employee| %>
      <tr>
        <td>
          <%= an_employee.id %>
        </td>

        <td>
          <%= an_employee.first_name %>
        </td>

        <td>
          <%= an_employee.last_name %>
        </td>

        <td>
          <%= an_employee.phone %>
        </td>

        <td>
          <%= an_employee.base %>
        </td>

        <td>
          <%= an_employee.position %>
        </td>

        <td>
          <%= an_employee.emp_id %>
        </td>

        <td>
          <%= an_employee.doh %>
        </td>

        <td>
          <%= an_employee.access %>
        </td>

        <td>
          <%= an_employee.image %>
        </td>

        <td>
          <%= an_employee.email %>
        </td>

        <td>
          <%= time_ago_in_words(an_employee.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_employee.updated_at) %> ago
        </td>

        <td>
          <a href="/employees/<%= an_employee.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
