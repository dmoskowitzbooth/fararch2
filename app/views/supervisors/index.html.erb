<div>
  <div>
    <h1>
      List of all supervisors
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new supervisor
    </h2>

    <form action="/insert_supervisor" method="post">
      <div>
        <label for="sup_id_box">
          Sup
        </label>

        <input type="text" id="sup_id_box" name="query_sup_id">
      </div>

      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email">
      </div>

      <div>
        <label for="phone_box">
          Phone
        </label>

        <input type="text" id="phone_box" name="query_phone">
      </div>

      <div>
        <label for="conference_number_box">
          Conference number
        </label>

        <input type="text" id="conference_number_box" name="query_conference_number">
      </div>

      <button>
        Create supervisor
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sup
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Email
        </th>

        <th>
          Phone
        </th>

        <th>
          Conference number
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_supervisors.each do |a_supervisor| %>
      <tr>
        <td>
          <%= a_supervisor.id %>
        </td>

        <td>
          <%= a_supervisor.sup_id %>
        </td>

        <td>
          <%= a_supervisor.first_name %>
        </td>

        <td>
          <%= a_supervisor.last_name %>
        </td>

        <td>
          <%= a_supervisor.email %>
        </td>

        <td>
          <%= a_supervisor.phone %>
        </td>

        <td>
          <%= a_supervisor.conference_number %>
        </td>

        <td>
          <%= time_ago_in_words(a_supervisor.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_supervisor.updated_at) %> ago
        </td>

        <td>
          <a href="/supervisors/<%= a_supervisor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
