<div>
  <div>
    <h1>
      List of all templates
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new template
    </h2>

    <form action="/insert_template" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="reason_box">
          Reason
        </label>

        <input type="text" id="reason_box" name="query_reason">
      </div>

      <div>
        <label for="expectations_box">
          Expectations
        </label>

        <input type="text" id="expectations_box" name="query_expectations">
      </div>

      <button>
        Create template
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Reason
        </th>

        <th>
          Expectations
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_templates.each do |a_template| %>
      <tr>
        <td>
          <%= a_template.id %>
        </td>

        <td>
          <%= a_template.title %>
        </td>

        <td>
          <%= a_template.reason %>
        </td>

        <td>
          <%= a_template.expectations %>
        </td>

        <td>
          <%= time_ago_in_words(a_template.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_template.updated_at) %> ago
        </td>

        <td>
          <a href="/templates/<%= a_template.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
