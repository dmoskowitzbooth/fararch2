<div>
  <div>
    <h1>
      User #<%= @the_user.id %> details
    </h1>

    <div>
      <div>
        <a href="/users">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_user/<%= @the_user.id %>">
          Delete user
        </a>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @the_user.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_user.last_name %>
      </dd>

      <dt>
        Phone
      </dt>
      <dd>
        <%= @the_user.phone %>
      </dd>

      <dt>
        Base
      </dt>
      <dd>
        <%= @the_user.base %>
      </dd>

      <dt>
        Position
      </dt>
      <dd>
        <%= @the_user.position %>
      </dd>

      <dt>
        Emp
      </dt>
      <dd>
        <%= @the_user.emp_id %>
      </dd>

      <dt>
        Doh
      </dt>
      <dd>
        <%= @the_user.doh %>
      </dd>

      <dt>
        Access
      </dt>
      <dd>
        <%= @the_user.access %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <td><img src="<%=@the_user.image %>" style="width:250px;"></td>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @the_user.email %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit user
    </h2>

    <form action="/modify_user/<%= @the_user.id %>"  method="post" >
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_user.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_user.last_name %>">
      </div>

      <div>
        <label for="phone_box">
          Phone
        </label>

        <input type="text" id="phone_box" name="query_phone" value="<%= @the_user.phone %>">
      </div>

      <div>
        <label for="base_box">
          Base
        </label>

        <input type="text" id="base_box" name="query_base" value="<%= @the_user.base %>">
      </div>

      <div>
        <label for="position_box">
          Position
        </label>

        <input type="text" id="position_box" name="query_position" value="<%= @the_user.position %>">
      </div>

      <div>
        <label for="emp_id_box">
          Emp
        </label>

        <input type="text" id="emp_id_box" name="query_emp_id" value="<%= @the_user.emp_id %>">
      </div>

      <div>
        <label for="doh_box">
          Doh
        </label>

        <input type="text" id="doh_box" name="query_doh" value="<%= @the_user.doh %>">
      </div>

      <div>
        <label for="access_box">
          Access
        </label>

        <input type="text" id="access_box" name="query_access" value="<%= @the_user.access %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_user.image %>">
      </div>

      <div>
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="query_email" value="<%= @the_user.email %>">
      </div>

      <button>
        Update user
      </button>
    </form>
  </div>
</div>

<hr>
